@{ ViewData["Title"] = "Авторизация"; }
@model LoginViewModel

<div class="col-4 text-center" style="margin: auto">
        <form asp-controller="Login" asp-action="Login" method="post" enctype="multipart/form-data" class="col-9 text-center" style="margin: auto">
            <div class="card" style="width: 330px">
                <div class="card-header">Авторизация</div>
                <div class="card-body">
                    <div class="form-group text-left">
                        <label asp-for="Nickname"></label>
                        <input type="text" class="form-control" asp-for="Nickname" />
                        <span asp-validation-for="Nickname"></span>
                    </div>
                    <div class="form-group text-left">
                        <label asp-for="Password"></label>
                        <input type="password" class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
                            <label asp-for="RememberMe"></label>
                        </label>
                    </div>
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <input type="submit" value="Войти" />
                </div>
            </div>
        </form>
        <div>
            <label>Уже есть аккаунт?</label>
            <a asp-area="" asp-controller="Register" asp-action="Index">
                <input type="submit" value="Зарегистрироваться" />
            </a>
        </div>
</div>